<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:background="@drawable/back3"
    android:orientation="vertical"
    tools:context="org.androidtown.safereturn.MainActivity">

    <Button
        android:id="@+id/taxinum"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="230dp"
        android:background="#9ba5b6"
        android:text="택시번호 전송"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/train"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="#9ba5b6"
        android:layout_gravity="center"
        android:text="지하철"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/mylocation"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="#9ba5b6"
        android:text="내위치 확인"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/regist"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="#9ba5b6"
        android:text="알림전화 등록"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/callcenter"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="#fffbc6"
        android:text="신고 센터"
        android:textColor="#3c3c3c" />

    <Button
        android:id="@+id/safemode"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="#F0B6B6"
        android:text="Safe Mode"
        android:textColor="#3c3c3c" />

</LinearLayout>